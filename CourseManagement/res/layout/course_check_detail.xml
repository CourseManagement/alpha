<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <include
            android:layout_width="match_parent"
            android:layout_height="50dp"
            layout="@layout/course_check_detail_title" />
    </LinearLayout>

    <!-- 课程信息显示 -->

    <LinearLayout
        android:id="@+id/c_massage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/course_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="课程信息"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/showgrade"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="年级："
                    android:textColor="#6CA6CD"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/grade"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textColor="#6CA6CD"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/shownum"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="专业人数："
                    android:textColor="#6CA6CD"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/num"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textColor="#6CA6CD"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/showmark"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="学分："
                    android:textColor="#6CA6CD"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/mark"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textColor="#6CA6CD"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/showtype"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="选修类型："
                    android:textColor="#6CA6CD"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textColor="#6CA6CD"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/showtime"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="学时："
                    android:textColor="#6CA6CD"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/stime"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textColor="#6CA6CD"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/showsjtime"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="上机学时："
                    android:textColor="#6CA6CD"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/sjtime"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_toRightOf="@+id/showsjtime"
                    android:textColor="#6CA6CD"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/showptime"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="实践学时："
                    android:textColor="#6CA6CD"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/ptime"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textColor="#6CA6CD"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/teacher_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="教师信息"
                android:textSize="20sp" />

            <com.UIxml.ListViewCompat4
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:background="#fff4f7f9"
                android:cacheColorHint="#00000000"
                android:divider="#dddbdb"
                android:dividerHeight="1.0px"
                android:drawSelectorOnTop="false"
                android:listSelector="@android:color/transparent"
                android:scrollbars="none" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>