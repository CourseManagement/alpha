<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/nianji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="年级:"
        android:textColor="#6CA6CD"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/zhuanye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="专业:"
        android:textColor="#6CA6CD"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/renshu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="专业人数:"
        android:textColor="#6CA6CD"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/mingchen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="课程名称:"
        android:textColor="#6CA6CD"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/leixing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="选修类型:"
        android:textColor="#6CA6CD"
        android:textSize="20dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         >

        <TextView
            android:id="@+id/xuefen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:text="学分:"
            android:textColor="#6CA6CD"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/xueshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/shangji"
            android:layout_marginLeft="38dp"
            android:layout_toRightOf="@+id/shiyan"
            android:text="学时:"
            android:textColor="#6CA6CD"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/shiyan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/xuefen"
            android:layout_below="@+id/xuefen"
            android:text="实验学时:"
            android:textColor="#6CA6CD"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/shangji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/xueshi"
            android:layout_below="@+id/xuefen"
            android:text="上机学时:"
            android:textColor="#6CA6CD"
            android:textSize="20dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="起讫周序："
            android:textColor="#6CA6CD"
            android:textSize="20dp" />

        <NumberPicker
            android:id="@+id/beginpicker"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="————" />

        <NumberPicker
            android:id="@+id/closepicker"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="周" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/zhouxu"
            android:layout_marginTop="26dp"
            android:gravity="right"
            android:text="备注："
            android:textColor="#6CA6CD"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/beizhu"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:orientation="vertical" >
        </LinearLayout>

        <EditText
            android:id="@+id/beizhu"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/textView2"
            android:ems="10"
            android:textColor="#6CA6CD"
            android:textSize="20dp" >

            <requestFocus />
        </EditText>
    </RelativeLayout>

</LinearLayout>