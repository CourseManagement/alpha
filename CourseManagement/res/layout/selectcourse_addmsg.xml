<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/nianji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="年级:"
        android:textColor="#6CA6CD"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/zhuanye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="专业:"
        android:textColor="#6CA6CD"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/renshu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="专业人数:"
        android:textColor="#6CA6CD"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/mingchen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="课程名称:"
        android:textColor="#6CA6CD"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/leixing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="选修类型:"
        android:textColor="#6CA6CD"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/xuefen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="学分:"
        android:textColor="#6CA6CD"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/xueshi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="学时:"
        android:textColor="#6CA6CD"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/shiyan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="实验学时:"
        android:textColor="#6CA6CD"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/shangji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="上机学时:"
        android:textColor="#6CA6CD"
        android:textSize="20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="22dp"
        android:textColor="#6CA6CD"
        android:textSize="20dp"
        android:text="起讫周序：" />

    <EditText
        android:id="@+id/zhouxu"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignParentRight="true"
        android:textColor="#6CA6CD"
        android:textSize="20dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/zhouxu"
        android:layout_marginTop="26dp"
        android:textColor="#6CA6CD"
        android:gravity="right"
        android:textSize="20dp"
        android:text="备注：" />

    <EditText
        android:id="@+id/beizhu"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentRight="true"
        android:textColor="#6CA6CD"
        android:textSize="20dp"
        android:ems="10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/beizhu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:orientation="vertical" >
    </LinearLayout>
    </RelativeLayout>

</LinearLayout>