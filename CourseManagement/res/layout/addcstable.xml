<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <include
            android:layout_width="match_parent"
            android:layout_height="50dp"
            layout="@layout/addcourse_title" />
    </LinearLayout>

    <Button
        android:id="@+id/jsjsy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="计算机实验班" />

    <Button
        android:id="@+id/jsjzy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="计算机卓越班" />

    <Button
        android:id="@+id/jsj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="计算机" />

    <Button
        android:id="@+id/rjgc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="软件工程" />

    <Button
        android:id="@+id/sxsy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="数学实验班" />

    <Button
        android:id="@+id/sx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="数学类" />

    <Button
        android:id="@+id/wlgc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="网络工程" />

    <Button
        android:id="@+id/xxaq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="信息安全" />
     <TextView
        android:id="@+id/begintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始时间："
        android:textColor="#6CA6CD"
        android:textSize="20dp" />
      <TextView
        android:id="@+id/closetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="结束时间："
        android:textColor="#6CA6CD"
        android:textSize="20dp" />

    <Button
        android:id="@+id/settime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置开始和结束时间" />

</LinearLayout>