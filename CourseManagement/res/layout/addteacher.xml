<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/add_T"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff" >

        <TextView
            android:id="@+id/gongID_text"
            android:layout_width="98dp"
            android:layout_height="41dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="55dp"
            android:text="工   号："
            android:textColor="#6CA6CD"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/gongID_edit"
            android:layout_width="180dp"
            android:layout_height="41dp"
            android:layout_marginTop="55dp"
            android:layout_toRightOf="@+id/gongID_text"
            android:textColor="#6CA6CD"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/init_password_text"
            android:layout_width="98dp"
            android:layout_height="41dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/gongID_text"
            android:layout_marginTop="20dp"
            android:text="密   码："
            android:textColor="#6CA6CD"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/init_password_edit"
            android:layout_width="180dp"
            android:layout_height="41dp"
            android:layout_below="@id/gongID_edit"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/gongID_text"
            android:textColor="#6CA6CD"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/name_text"
            android:layout_width="98dp"
            android:layout_height="41dp"
            android:layout_below="@+id/init_password_text"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="姓   名："
            android:textColor="#6CA6CD"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/name_edit"
            android:layout_width="180dp"
            android:layout_height="41dp"
            android:layout_below="@id/init_password_edit"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/name_text"
            android:textColor="#6CA6CD"
            android:textSize="24dp" />

         <Button
             android:id="@+id/make_sure"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignRight="@+id/name_edit"
            android:layout_below="@+id/name_edit"           
            android:layout_marginRight="21dp"
            android:layout_marginTop="40dp"
            android:padding="10dip"
             android:background="#ADD8E6"
             android:text="确认添加"
             android:textColor="#fff" />

         <Button
             android:id="@+id/tableimport"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_alignTop="@+id/make_sure"
             android:layout_marginLeft="52dp"
             android:padding="10dip"
             android:background="#ADD8E6"
             android:text="一键导入"
             android:textColor="#fff" />

    </RelativeLayout>

</LinearLayout>
