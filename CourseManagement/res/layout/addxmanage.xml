<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/add_X"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff" >

        <TextView
            android:id="@+id/userID_text"
            android:layout_width="98dp"
            android:layout_height="41dp"
            android:text="用户名："
            android:textColor="#6CA6CD"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/userID_edit"
            android:layout_width="200dp"
            android:layout_height="41dp"
            android:layout_toRightOf="@+id/userID_text"
            android:textColor="#6CA6CD"
            android:textSize="24dp" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/password_text"
            android:layout_width="98dp"
            android:layout_height="41dp"
            android:layout_below="@id/userID_text"
            android:text="密    码："
            android:textColor="#6CA6CD"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/password_edit"
            android:layout_width="200dp"
            android:layout_height="41dp"
            android:layout_below="@id/userID_edit"
            android:layout_toRightOf="@+id/userID_text"
            android:textColor="#6CA6CD"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/major_text"
            android:layout_width="98dp"
            android:layout_height="41dp"
            android:layout_below="@+id/password_text"
            android:textColor="#6CA6CD"
            android:textSize="24dp" 
            android:text="院    系：" />

        <EditText
            android:id="@+id/major_spinner"
            android:layout_width="200dp"
            android:layout_height="41dp"
            android:layout_toRightOf="@id/major_text"
            android:layout_below="@+id/password_edit"
            android:textColor="#6CA6CD"
            android:textSize="24dp"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/makesure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/password_edit"
            android:layout_below="@+id/major_spinner"
            android:layout_marginRight="21dp"
            android:layout_marginTop="16dp"
            android:background="#ADD8E6"
            android:text="确认添加"
            android:textColor="#fff" />

        <Button
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/makesure"
            android:layout_alignBottom="@+id/makesure"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"
            android:background="#ADD8E6"
            android:text="重      置"
            android:textColor="#fff" />
    </RelativeLayout>

</LinearLayout>
