<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        android:layout_width="match_parent"
        android:layout_height="50dp"
        layout="@layout/teacher_personmsg_title" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/per_massage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">
    <TextView
        android:id="@+id/showuser"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textColor="#6CA6CD"
        android:textSize="20dp" 
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="用户名："
         />

    <TextView
        android:id="@+id/showpsd"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/showuser"
        android:layout_below="@+id/showuser"
        android:text="密   码："
        android:textColor="#6CA6CD"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/showname"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/showpsd"
        android:layout_below="@+id/showpsd"
        android:text="姓   名："
        android:textColor="#6CA6CD"
        android:textSize="20dp"  />

    <TextView
        android:id="@+id/showph"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/showname"
        android:layout_below="@+id/showname"
        android:text="手   机："
         android:textColor="#6CA6CD"
        android:textSize="20dp" />
    
     <TextView
        android:id="@+id/showmajor"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/showph"
        android:layout_below="@+id/showph"
        android:text="所属系："
         android:textColor="#6CA6CD"
        android:textSize="20dp" />
     
      <TextView
        android:id="@+id/showmail"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/showmajor"
        android:layout_below="@+id/showmajor"
        android:text="邮   箱："
         android:textColor="#6CA6CD"
        android:textSize="20dp" />
      
       <TextView
        android:id="@+id/showsex"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/showmail"
        android:layout_below="@+id/showmail"
        android:text="性   别："
         android:textColor="#6CA6CD"
        android:textSize="20dp" />
       
        <TextView
        android:id="@+id/showbirth"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/showsex"
        android:layout_below="@+id/showsex"
        android:text="出生年月："
         android:textColor="#6CA6CD"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textusername"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/showuser"
        android:textColor="#6CA6CD"
        android:textSize="20dp"
        android:text=" " />

    <EditText
        android:id="@+id/edtpsd"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/textusername"
        android:layout_toRightOf="@+id/showpsd"
        android:textColor="#6CA6CD"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edtname"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/edtpsd"
        android:layout_toRightOf="@+id/showname"
        android:textColor="#6CA6CD"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edtph"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/edtname"
        android:layout_toRightOf="@+id/showph"
        android:textColor="#6CA6CD"
        android:textSize="20dp" />
    
    <EditText
        android:id="@+id/edtmajor"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/edtph"
        android:layout_toRightOf="@+id/showmajor"
        android:textColor="#6CA6CD"
        android:textSize="20dp" />
    
    <EditText
        android:id="@+id/edtmail"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/edtmajor"
        android:layout_toRightOf="@+id/showmail"
        android:textColor="#6CA6CD"
        android:textSize="20dp" />
    
    <EditText
        android:id="@+id/edtsex"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/edtmail"
        android:layout_toRightOf="@+id/showsex"
        android:textColor="#6CA6CD"
        android:textSize="20dp" />
    
    <EditText
        android:id="@+id/edtbirth"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_below="@id/edtsex"
        android:layout_toRightOf="@+id/showbirth"
        android:textColor="#6CA6CD"
        android:textSize="20dp" />
    
    

    <Button
        android:id="@+id/btchange"
        android:layout_width="100dp"
        android:layout_height="52dp"
        android:layout_below="@+id/showbirth"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="#ADD8E6"
        android:textColor="#fff"
        android:text="确认修改" 
        android:textSize="20dp"/>
    </RelativeLayout>
</LinearLayout>