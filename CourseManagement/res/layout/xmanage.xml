<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/xmanage_title" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/message_update"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff" >

        <TextView
            android:id="@+id/username_text"
            android:layout_width="98dp"
            android:layout_height="41dp"
            android:text="用户名："
            android:textColor="#6CA6CD"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/username1"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/username_text"
            android:textColor="#6CA6CD"
            android:textSize="24dp" />

           
         <TextView
            android:id="@+id/password_text"
            android:layout_width="98dp"
            android:layout_height="41dp"
            android:layout_below="@id/username_text"
            android:text="密   码："
            android:textColor="#6CA6CD"
            android:textSize="24dp" />
        <EditText
            android:id="@+id/password_edit1"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/password_text"
            android:layout_below="@id/username1"
            android:textColor="#6CA6CD"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/major_text"
            android:layout_width="98dp"
            android:layout_height="41dp"
            android:layout_below="@+id/password_text"
            android:text="所在系："
            android:textColor="#6CA6CD"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/major_edit1"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password_edit1"
            android:layout_toRightOf="@+id/major_text"
            android:textColor="#6CA6CD"
            android:textSize="24dp" />

       
    </RelativeLayout>

</LinearLayout>
